<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PollinatorPathway</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PollinatorPathway.styles.css" asp-append-version="true" />
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-#188C81">
            <div class="container-fluid">
                <a class="navbar-brand text-#040926" asp-area="" asp-controller="Home" asp-action="AdminPortal"><img src="https://user-images.githubusercontent.com/67928730/172041077-92403997-aa07-4c54-ba08-b8c76b25d7da.png" width = 50/> PollinatorPathway</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-#040926" asp-area="" asp-controller="Home" asp-action="AdminPortal">Admin Portal</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-#040926" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name ="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script>
            var count = 0;
            img = document.getElementById("img");
            // Function to set image dimensions
            function enlargeImg() {
                if(count == 0){
                    this.img.style.width = "1000px";
                    this.img.style.height = "auto";
                    this.img.style.transition = "width 0.5s ease";
                    count ++;
                }
                else{
                    this.img.style.width = "200px";
                    this.img.style.height = "auto";
                    this.img.style.transition = "width 0.5s ease";
                    count--;
                }
            }
        </script>
    <footer class="border-top footer text-muted">
        <div class="container" style="margin-left:100px;">
            &copy; 2022 - PollinatorPathway - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
