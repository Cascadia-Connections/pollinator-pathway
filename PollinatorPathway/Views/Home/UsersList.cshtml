@model PaginatedList<PollinatorPathway.Model.UserProfile>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Admin Search";
    Layout = "_Layout";
}
<div class = "tables">
<h3>User Profiles </h3>

<p>
    <a asp-controller="Home" asp-action="CreateProfile" class="link-light">Create New</a>
</p>

<form asp-action="getUsers" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="searchButton" /> |
            <a asp-action="getUsers">Back to Full List</a>
        </p>
    </div>
</form>      
<table id="table">
     <thead>
        <tr>
                <th>
                    <a asp-action="getUsers" asp-route-sortOrder="@ViewData["NameSortUserParm"]" asp-route-currentFilter="@ViewData["CurrentUserFilter"]">Last Name</a>
                </th>
                <th>
                    First Name
                </th>
                <th>
                    <a asp-action="getUsers" asp-route-sortOrder="@ViewData["DateSortUserParm"]" asp-route-currentFilter="@ViewData["CurrentUserFilter"]">Date Joined</a>
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email Address</th>
        <th>Phone</th>
        <th>Team Contact</th>
        <th>Date Joined</th>
        <th>Organization Name</th>
        <th>Organization Email</th>
        <th>Organization Type</th>
        <th>Planting Preference</th>
        <th>Address</th>
        <th>GPS</th>
        <th>Planting Name</th>
        <th>Planting Description</th>
        <th>Image 1</th>
        <th>Image 2</th>
        <th>Image 3</th>
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>
                @user.FirstName
            </td>
            <td>
                @user.LastName
            </td>
            <td>
                @user.EmailAddress
            </td>
            <td>
                @user.Phone
            </td>
            <td>
                @user.TeamContact
            </td>
            <td>
                @user.DateJoined
            </td>
            <td>
                @user.OrganizationName
            </td>
            <td>
                @user.OrganizationEmail
            </td>
            <td>
                @user.OrganizationType
            </td>
            <td>
                @user.IsPrivate
            </td>
            <td>
                @user.Address
            </td>
            <td>
                @user.GPS
            </td>
            <td>
                @user.PlantName
            </td>
            <td>
                @user.PlantDesc
            </td>
            <td>
                @user.Image1
            </td>
            <td>
                @user.Image2
            </td>
            <td>
                @user.Image3
            </td>
          <td class="rightedge">
                  @Html.ActionLink("Remove", "DeleteProfile", new { id = @user.Id }, new { onclick = "return confirm('Are you sure you want to delete " + @user.FirstName+"?');" }) |
                <a asp-action="UpdateProfile" asp-controller="Home"  asp-route-id="@user.Id">Update</a>
            </td>
           
           
        </tr>
    }

</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="getUsers"
   asp-route-sortOrder="@ViewData["CurrentUserSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentUserFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="getUsers"
   asp-route-sortOrder="@ViewData["CurrentUserSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentUserFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>
</div>  
