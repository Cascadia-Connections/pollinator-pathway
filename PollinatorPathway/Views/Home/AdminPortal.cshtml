@model PollinatorPathway.Areas.Identity.Data.PollinatorPathwayUser
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    ViewData["Title"] = "Admin Portal";
}

<fieldset>
        <h1>Welcome, @Model.FirstName</h1>

    <div class="basenav">
        <span id = "open" style="font-size:30px;cursor:pointer;color:white;padding-left:10px;" onclick="openNav()">&#9776; </span>
    </div>
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

        <div>
            <input  class = "button" type="button" onclick="location.href='@Url.Action("CreateProfile", "Home")'"  value="Create Profile"/>
        </div>
         <div>
             <a asp-area="Identity" asp-page="/Account/Register">Create Account</a>
        </div>
         <div>
             <input class = "button" type="button" onclick="location.href='@Url.Action("ImageApproval", "Home")'"value="Approve Content"/>
        </div>
         <div>
             <input class = "button" type="button" onclick="location.href='@Url.Action("getUsers", "Home")'" value="Search User Base"/>
        </div>

    </div>
    <script>
        function openNav() {
          document.getElementById("mySidenav").style.width = "250px";
        }

        function closeNav() {
          document.getElementById("mySidenav").style.width = "0";
        }
    </script>
    <h1 style = "padding-top:50px">Pollinator Pathway</h1>
    <div id="map" style="width: 100%;height: 1200px;padding-left:40px;"></div>
<script
      src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDW8pXWk1gU0vpphdAjFzNhJVqBWDF53Qc&callback=initMap&v=weekly"
      defer
    ></script>
    <script>
        function initMap() {
   {

  const cascadia = { lat: 47.7609, lng: -122.1914 };
  
